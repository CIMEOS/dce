plugin.tx_dce {
    view {
        layoutRootPaths {
            0 = {$plugin.tx_dce.view.layoutRootPath}
        }

        templateRootPaths {
            0 = {$plugin.tx_dce.view.templateRootPath}
        }

        partialRootPaths {
            0 = {$plugin.tx_dce.view.partialRootPath}
        }
    }
}

module.tx_dce {
    view {
        layoutRootPaths {
            0 = EXT:dce/Resources/Private/Layouts/
        }

        templateRootPaths {
            0 = EXT:dce/Resources/Private/Templates/
        }

        partialRootPaths {
            0 = EXT:dce/Resources/Private/Partials/
        }
    }
}
